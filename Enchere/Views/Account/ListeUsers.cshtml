@using Enchere.Models


@{
    ViewBag.Title = "ListeUsers";
}

<h2>Liste Membres Inscrits</h2>
<br />
@Html.ActionLink("Nouvel utilisateur", "Inscription", "Account")
<br />
<table class="table">
    <tr>
        <th>Civilite</th>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Langue</th>
        <th>Telephone</th>
        <th>Adresse</th>
        <th>Courriel</th>
        <th>Inscription</th>
        <th>Cote</th>
        <th></th>
        <th></th>
    </tr>

    @{ if (ViewBag.Users != null)
        {

            try
            {

                foreach (Membre m in ViewBag.Users)
                {
                    <tr>
                        <td>
                            @m.Civilite
                        </td>
                        <td>
                            @m.Nom
                        </td>
                        <td>
                            @m.Prenom
                        </td>
                        <td>
                            @m.Langue
                        </td>
                        <td>
                            @m.Telephone
                        </td>
                        <td>
                            @m.Adresse
                        </td>
                        <td>
                            @m.Courriel
                        </td>
                        <td>
                            @String.Format("{0:d/M/yyyy}", @m.DateInscri);

                        </td>
                        <td>
                            @m.Cote
                        </td>
                        @if (m.Courriel != "admin@admin.ca")
                        {
                            <td>
                                @Html.ActionLink("Editer", "Edit", "Account", new { Id = m.Id }, null)
                            </td>
                            <td>
                                @Html.ActionLink("Supprimer", "DeleteUser", "Account", new { Id = m.Id }, null)
                            </td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>}

                    </tr>
                }

            }
            catch { }
        }
    }

</table>


